{
  "name": "mern-auth-jwt",
  "version": "1.0.0",
  "description": "membuat sistem autentikasi menggunakan json web token pada aplikasi berbasis mern stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run install-client && npm run build",
    "start:dev": "nodemon server.js --unhandled-rejections=strict"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/febriadj/mern-auth-jwt.git"
  },
  "keywords": [
    "mern-stack",
    "jwt-auth"
  ],
  "author": "febriadji",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/febriadj/mern-auth-jwt/issues"
  },
  "homepage": "https://github.com/febriadj/mern-auth-jwt#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
